package application;
import java.util.Scanner;
/*
 * author: Logan
 * purpose: Building a simple application
 */
public class SampleProgram {
	public static void main(String[] args)
	{
		// declare variables
		int firstNum;
		double secondNum;
		double average;

		Scanner input = new Scanner(System.in);

		// prompt user
		System.out.print("Enter the first value: ");
		firstNum = input.nextInt();
		System.out.print("Enter the second value: ");
		secondNum = input.nextDouble();

		// preset value
//		firstNum = 7;
//		secondNum = 22.4;

		// average calculation
		average = (firstNum + secondNum) / 2;

		// output
//		System.out.println("The average of " + firstNum + " and " + secondNum + " is " + average);
		System.out.printf("The average of %d and %.3f is %.3f", firstNum, secondNum, average);
	}

}
